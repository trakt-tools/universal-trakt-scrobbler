{
	"env": {
		"browser": true,
		"es6": true,
		"node": true,
		"webextensions": true
	},
	"extends": ["eslint:recommended", "plugin:react/recommended"],
	"globals": {
		"expect": false
	},
	"parser": "babel-eslint",
	"parserOptions": {
		"ecmaVersion": 9,
		"sourceType": "module"
	},
	"rules": {
		"no-console": "off",
		"no-constant-condition": [
			"error",
			{
				"checkLoops": false
			}
		],
		"no-empty": "off",
		"no-fallthrough": "off"
	}
}
