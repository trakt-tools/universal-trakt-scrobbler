{
	"exclude": [
		"./node_modules",
		"./build",
		"./local-eslint-plugins",
		"./src/streaming-services/scrobbler-template",
		"./src/streaming-services/sync-template"
	],
	"compilerOptions": {
		"allowJs": true,
		"checkJs": true,
		"jsx": "react",
		"module": "CommonJS",
		"outDir": "./build",
		"sourceMap": true,
		"target": "ES2020",
		"strict": true,
		"typeRoots": ["./node_modules/@types", "./node_modules/web-ext-types"],
		"resolveJsonModule": true,
		"skipLibCheck": true
	}
}
